<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required bundle metadata -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundleDisplayName</key>
    <string>WatchNotes</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>
    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>

    <!-- Standalone watchOS app identifier -->
    <key>WKApplication</key>
    <true/>
    <key>WKCompanionAppBundleIdentifier</key>
    <string>com.watchnotes.ios</string>
    <key>WKRunsIndependentlyOfCompanionApp</key>
    <true/>

    <!-- Required privacy descriptions for permissions -->

    <!-- Microphone permission - Required for voice input -->
    <key>NSMicrophoneUsageDescription</key>
    <string>WatchNotes needs microphone access to record voice notes and convert speech to text.</string>

    <!-- Speech recognition permission - Required for voice-to-text -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>WatchNotes uses speech recognition to convert your voice recordings into text notes.</string>

    <!-- App Transport Security - Allow secure connections -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
</dict>
</plist>
